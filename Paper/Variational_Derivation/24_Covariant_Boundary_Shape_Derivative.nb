Notebook[{
Cell["24 - Covariant Boundary Shape Derivative", "Title",ExpressionUUID->"4de75c1e-2885-4cbf-8584-5726c1cc4f8b"],

Cell["\<\
Causal-domain indicator as Heaviside level-set: delta chi gives boundary \
DiracDelta term, reproducing the finite-domain boundary contribution.\
\>", "Text",ExpressionUUID->"7949c76f-b2f8-4dc8-b329-1717d08a404c"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"chiEps", "[", "r_", "]"}], ":=", 
   RowBox[{"HeavisideTheta", "[", 
    RowBox[{"R", "+", 
     RowBox[{"eps", " ", "rho"}], "-", "r"}], "]"}]}],
  HoldForm]], "Input",ExpressionUUID->"778dce6a-018d-49f3-9ea2-b627a066be1a"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"dchi", "\[Equal]", 
    RowBox[{
     SubscriptBox["\[PartialD]", "eps"], 
     RowBox[{"chiEps", "[", "r", "]"}]}]}], "/.", "\[VeryThinSpace]", 
   RowBox[{"eps", "\[Rule]", 
    RowBox[{"0", "\[Equal]", 
     RowBox[{"rho", " ", 
      RowBox[{"DiracDelta", "[", 
       RowBox[{"R", "-", "r"}], "]"}]}]}]}]}],
  HoldForm]], "Input",ExpressionUUID->"ffa289d1-af0d-4e91-a727-c2f1aac02ba5"],

Cell[BoxData[
 TagBox[
  RowBox[{"deltaI0boundary", "\[Equal]", 
   RowBox[{
    SubsuperscriptBox["\[Integral]", "0", "\[Infinity]"], 
    RowBox[{
     RowBox[{
      RowBox[{"mu", "[", "r", "]"}], " ", "rho", " ", 
      RowBox[{"DiracDelta", "[", 
       RowBox[{"R", "-", "r"}], "]"}]}], 
     RowBox[{"\[DifferentialD]", "r"}]}]}], "\[Equal]", 
   RowBox[{"rho", " ", 
    RowBox[{"mu", "[", "R", "]"}]}]}],
  HoldForm]], "Input",ExpressionUUID->"d719809b-64d0-4859-aa09-c537dfc8c02a"],

Cell[BoxData[
 TagBox[
  RowBox[{"deltaI1boundary", "\[Equal]", 
   RowBox[{
    SubsuperscriptBox["\[Integral]", "0", "\[Infinity]"], 
    RowBox[{
     RowBox[{
      RowBox[{"mu", "[", "r", "]"}], " ", 
      RowBox[{"k2", "[", "r", "]"}], " ", "rho", " ", 
      RowBox[{"DiracDelta", "[", 
       RowBox[{"R", "-", "r"}], "]"}]}], 
     RowBox[{"\[DifferentialD]", "r"}]}]}], "\[Equal]", 
   RowBox[{"rho", " ", 
    RowBox[{"mu", "[", "R", "]"}], " ", 
    RowBox[{"k2", "[", "R", "]"}]}]}],
  HoldForm]], "Input",ExpressionUUID->"2ad254c3-b549-4d82-b552-9bf58ab01aa7"]
},
