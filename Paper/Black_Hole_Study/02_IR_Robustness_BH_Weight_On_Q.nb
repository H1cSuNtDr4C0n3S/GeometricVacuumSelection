Cell["02 - IR Robustness: BH Weight on Q=I1/I0", "Title",ExpressionUUID->"881737e3-de3b-4522-bdef-741aa762e0c9"],

Cell["\<\
Toy test: de Sitter background plus local BH defect. Goal: quantify when \
deltaQ stays volume-suppressed and when non-integrable core behavior can make \
it O(1).\
\>", "Text",ExpressionUUID->"e172a1bb-baa2-458f-b8a3-d919923594cb"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"Q", "\[Equal]", 
    FractionBox["I1", "I0"]}], "&&", 
   RowBox[{"I1", "\[Equal]", 
    RowBox[{"I1bg", "+", "deltaI1BH"}]}], "&&", 
   RowBox[{"I0", "\[Equal]", "I0cosmo"}]}],
  HoldForm]], "Input",ExpressionUUID->"5bb00807-de82-408f-a043-60be53dc3ea9"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"deltaI1BH", "[", "p", "]"}], "\[Equal]", 
   RowBox[{"4", " ", "\[Pi]", " ", "a", " ", "K2bg", " ", 
    SuperscriptBox["rs", "p"], " ", 
    RowBox[{
     SubsuperscriptBox["\[Integral]", "reps", "rMatch"], 
     RowBox[{
      SuperscriptBox["r", 
       RowBox[{"2", "-", "p"}]], 
      RowBox[{"\[DifferentialD]", "r"}]}]}]}]}],
  HoldForm]], "Input",ExpressionUUID->"36588d40-9b86-4a1a-8870-7232d3f6f752"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"deltaQ", "\[Equal]", 
    FractionBox["deltaI1BH", "I0"]}], "&&", 
   RowBox[{"I0", "\[Equal]", 
    RowBox[{
     FractionBox["1", "3"], " ", 
     RowBox[{"(", 
      RowBox[{"4", " ", "\[Pi]"}], ")"}], " ", 
     RowBox[{"(", 
      RowBox[{
       SuperscriptBox["Rc", "3"], "-", 
       SuperscriptBox["reps", "3"]}], ")"}]}]}]}],
  HoldForm]], "Input",ExpressionUUID->"266850cb-cd44-4e42-a7fc-111cfeafa204"],

Cell[BoxData[
 RowBox[{"HoldForm", "[", 
  RowBox[{
   RowBox[{
    RowBox[{"p", "<", "3"}], "\[Rule]", 
    RowBox[{"integrable", " ", 
     RowBox[{"(", 
      RowBox[{"finite", " ", "core", " ", "contribution"}], ")"}]}]}], ",", 
   RowBox[{
    RowBox[{"p", ">", "3"}], "\[Rule]", 
    RowBox[{"non", "-", 
     RowBox[{"integrable", " ", "core", " ", "sensitivity"}]}]}]}], 
  "]"}]], "Input",ExpressionUUID->"20959e36-81ab-4396-aed7-c8b66860e0ce"]
