Notebook[{
Cell["06 - Interior Regularization Consistency Test", "Title",ExpressionUUID->"cfee159a-be9d-4cde-9218-f0907e0b9718"],

Cell["\<\
Implement interior regularization (soft core) and test: (i) Q(rmin) converges \
as rmin->0, (ii) BH IR scaling remains volume-suppressed.\
\>", "Text",ExpressionUUID->"999e92ed-a432-4441-9dc8-53a5c2c51940"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"vReg", "[", "r_", "]"}], "\[Equal]", 
   SqrtBox[
    RowBox[{
     FractionBox[
      RowBox[{"2", " ", "M"}], 
      SqrtBox[
       RowBox[{
        SuperscriptBox["r", "2"], "+", 
        SuperscriptBox["aReg", "2"]}]]], "+", 
     RowBox[{
      SuperscriptBox["H", "2"], " ", 
      SuperscriptBox["r", "2"]}]}]]}],
  HoldForm]], "Input",ExpressionUUID->"8494f291-beea-4e23-9331-467ef71ac76b"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"K2reg", "[", "r_", "]"}], "\[Equal]", 
   RowBox[{
    SuperscriptBox[
     RowBox[{
      SuperscriptBox["vReg", "\[Prime]",
       MultilineFunction->None], "[", "r", "]"}], "2"], "+", 
    RowBox[{"2", " ", 
     SuperscriptBox[
      RowBox[{"(", 
       FractionBox[
        RowBox[{"vReg", "[", "r", "]"}], "r"], ")"}], "2"]}]}]}],
  HoldForm]], "Input",ExpressionUUID->"04d872b3-73fb-4031-8c5c-853a444cd0ad"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{
    RowBox[{"Qreg", "[", "rmin", "]"}], "\[Equal]", 
    FractionBox[
     RowBox[{"I1reg", "[", "rmin", "]"}], 
     RowBox[{"I0", "[", "rmin", "]"}]]}], "&&", 
   RowBox[{"r", " ", 
    RowBox[{"in", "[", 
     RowBox[{"rmin", ",", "rout"}], "]"}]}]}],
  HoldForm]], "Input",ExpressionUUID->"01f49727-8e09-4963-89f6-cbb9bcc810b0"],

Cell[BoxData[
 TagBox[
  RowBox[{
  "validation", 
   "\[Equal]", "\"\<convergent core (n_eff < 3) + preserved IR \
suppression\>\""}],
  HoldForm]], "Input",ExpressionUUID->"3517dfe9-8d64-4fb8-982f-1e712c1048f4"]
