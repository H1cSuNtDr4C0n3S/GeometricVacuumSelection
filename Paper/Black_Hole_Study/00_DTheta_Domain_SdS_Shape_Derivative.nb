Notebook[{
Cell["00 - DTheta Domain in Schwarzschild-de Sitter", "Title",ExpressionUUID->"ab260156-b966-4607-8b77-503b800ebf71"],

Cell["\<\
Question zero: define DTheta with an operational redshift cutoff and test \
unambiguous boundary shape derivative under BH-mass deformation.\
\>", "Text",ExpressionUUID->"81e7fa3f-67eb-49a5-a46a-2b1d4c03252a"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"f", "[", 
    RowBox[{"r_", ",", "M_", ",", "H_"}], "]"}], ":=", 
   RowBox[{"1", "-", 
    FractionBox[
     RowBox[{"2", " ", "M"}], "r"], "-", 
    RowBox[{
     SuperscriptBox["H", "2"], " ", 
     SuperscriptBox["r", "2"]}]}]}],
  HoldForm]], "Input",ExpressionUUID->"49dfabe5-1d87-4ccd-8d2a-29bae876e267"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"DTheta", "[", 
    RowBox[{"M_", ",", "H_", ",", "z2_"}], "]"}], "\[Equal]", 
   RowBox[{"{", 
    RowBox[{
     RowBox[{"r", ">", "0"}], "|", 
     RowBox[{
      RowBox[{"f", "[", 
       RowBox[{"r", ",", "M", ",", "H"}], "]"}], "\[GreaterEqual]", "z2"}]}], 
    "}"}]}],
  HoldForm]], "Input",ExpressionUUID->"f1e25f12-1826-4b39-80af-9e817733900e"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"{", 
    RowBox[{"rIn", ",", "rOut"}], "}"}], "/.", "\[VeryThinSpace]", 
   RowBox[{
    RowBox[{
     RowBox[{
      RowBox[{"f", "[", 
       RowBox[{"r", ",", "M", ",", "H"}], "]"}], "-", "z2"}], "\[Equal]", 
     "0"}], "&&", 
    RowBox[{"rIn", "<", "rOut"}]}]}],
  HoldForm]], "Input",ExpressionUUID->"f59f6663-94c8-46a2-98ef-52d37144a231"],

Cell[BoxData[
 TagBox[
  RowBox[{
   RowBox[{"drdM", "[", "r_", "]"}], "\[Equal]", 
   RowBox[{"-", 
    FractionBox[
     RowBox[{
      SubscriptBox["\[PartialD]", "M"], 
      RowBox[{"(", 
       RowBox[{
        RowBox[{"f", "[", 
         RowBox[{"r", ",", "M", ",", "H"}], "]"}], "-", "z2"}], ")"}]}], 
     RowBox[{
      SubscriptBox["\[PartialD]", "r"], 
      RowBox[{"(", 
       RowBox[{
        RowBox[{"f", "[", 
         RowBox[{"r", ",", "M", ",", "H"}], "]"}], "-", "z2"}], ")"}]}]]}], "\[Equal]", 
   FractionBox["r", 
    RowBox[{"M", "-", 
     RowBox[{
      SuperscriptBox["H", "2"], " ", 
      SuperscriptBox["r", "3"]}]}]]}],
  HoldForm]], "Input",ExpressionUUID->"8b332980-89cf-494d-8094-0160e8ca0278"],

Cell[BoxData[
 TagBox[
  RowBox[{"dI0dM", "\[Equal]", 
   RowBox[{
    RowBox[{
     RowBox[{"mu", "[", "rOut", "]"}], " ", "drOutdM"}], "-", 
    RowBox[{
     RowBox[{"mu", "[", "rIn", "]"}], " ", "drIndM"}]}]}],
  HoldForm]], "Input",ExpressionUUID->"b58b6876-b282-4fe0-be2d-59fdb4a680d3"]
},
